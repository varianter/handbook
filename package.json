{
  "name": "@variant/handbook",
  "version": "1.2.0",
  "description": "Variant h√•ndbok tilgjengelig som markdown eller via terminalen.",
  "main": "npm/data.js",
  "bin": {
    "variant": "npm/handbook.js"
  },
  "files": [
    "npm/",
    "src/pages/*.md"
  ],
  "repository": {
    "url": "https://github.com/varianter/handbook",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/varianter/handbook/issues"
  },
  "scripts": {
    "css": "postcss ./docs/styles/style.css -r",
    "prebuild": "mkdir -p docs/",
    "build": "node tools/generate.js && npm run css",
    "precibuild": "mkdir -p docs/",
    "cibuild": "npm run build && npm run precache",
    "clean": "rm -rf ./docs/*",
    "start": "serve",
    "watch": "onchange 'src/**/*' 'tools/**/*' -- npm run build",
    "precache": "sw-precache --root=docs --static-file-globs='docs/**/*.{html,json,js,css,svg,jpg,png}'"
  },
  "keywords": [
    "cli",
    "markdown",
    "handbook",
    "variant",
    "open source information",
    "transparent company"
  ],
  "author": "Variant AS",
  "license": "MIT",
  "dependencies": {
    "@variant/md-section": "^1.0.0",
    "chalk": "^3.0.0",
    "date-fns": "^2.9.0",
    "glob": "^7.1.6",
    "glob-promise": "^3.4.0",
    "markdown-it": "^10.0.0",
    "markdown-it-toc-and-anchor": "^4.2.0",
    "marked": "^0.8.0",
    "marked-terminal": "^4.0.0",
    "prompt-list": "^3.2.0"
  },
  "devDependencies": {
    "autoprefixer": "^9.7.3",
    "husky": "^4.0.7",
    "onchange": "^6.1.0",
    "postcss": "^7.0.26",
    "postcss-clean": "^1.1.0",
    "postcss-cli": "^7.1.0",
    "postcss-custom-properties": "^9.0.2",
    "prettier": "1.19.1",
    "pretty-quick": "^2.0.1",
    "recursive-copy": "^2.0.10",
    "serve": "^11.3.0",
    "sw-precache": "^5.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
